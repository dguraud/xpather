{
  "name": "xpather",
  "version": "0.0.1",
  "description": "Xpath expressions generator",
  "main": "./built/index.js",
  "typing": "./built/index.d.ts",
  "scripts": {
    "clean": "rm -rf ./built && rm -rf ./.nyc_output && rm -f package-lock.json",
    "compile-test": "tsc --project test",
    "compile": "tsc --project lib",
    "compile-test-watch": "tsc -w --project test",
    "test-watch": "nodemon --exec jasmine ./built/test/**/*.test.js",
    "pretest": "npm run clean && npm run compile-test",
    "test": "nyc --report=lcov jasmine ./built/test/**/*.test.js",
    "build": "npm test && npm run clean && npm run compile"
  },
  "keywords": [
    "xpath",
    "locator",
    "selenium",
    "webdriver"
  ],
  "author": {
    "name": "Alexander Popov",
    "email": "aleksander.popov.93@gmail.com"
  },
  "license": "ISC",
  "dependencies": {
    "typescript": "2.9.2",
    "@types/node": "10.3.4"
  },
  "devDependencies": {
    "jasmine-cookies": "0.1.3",
    "nodemon": "1.17.3",
    "istanbul": "0.4.5",
    "nyc": "12.0.2",
    "concurrently": "3.5.1"
  }
}
